<!-- Navbar Start -->
<div class="navbar blue">
  <!-- Brand Start-->
  <%= link_to 'Mundua', root_path, class: "brand text-white" %>
  <!-- Brand End-->
  <!-- Menu Start-->
  <ul class="menu pull-left">
    <li class="divider"></li>
  </ul>
  <!-- Menu End -->
  
  <!-- Search Form Start-->
  <form class="form purple icon-right" action="<%= search_path %>"  method="get">
