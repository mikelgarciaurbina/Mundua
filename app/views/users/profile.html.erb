<h2 class="padding-bottom">Profile</h2>
<%= form_for @user do |form| %>
  <%= render 'partials/errors', object: @user %>
  
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :lastname %>
    <%= form.text_field :lastname, class: 'form-control' %>
  </div>

  <%= form.submit "Update", class: "btn blue margin-top-10" %>
<% end %>

<h2 class="padding-bottom padding-top-20">Technologies</h2>
<div class="row padding padding-bottom-20">
  <div class="col-12">
    <% @user.technologies.each do |technology| %>
      <a href="javascript:;" class="label orange-red hover-tooltip text-body">
        <span class="tooltip top text-capitalize"><%= technology.name %></span>
        <%= technology.name %>
      </a>
    <% end %>
  </div>
</div>
<%= form_for @technology do |form| %>
  <div id="technology">
    <input class="typeahead form-control" name="name" type="text" placeholder="Insert Technology">
  </div>
  <%= form.submit "Add technology", class: "btn blue margin-top-10" %>
<% end %>

<h2 class="padding-bottom padding-top-20">Hobbies</h2>
<div class="row padding padding-bottom-20">
  <div class="col-12">
    <ul>
    <% @user.hobbies.each do |hobby| %>
      <li class="content-li"><%= hobby.name %></li>
    <% end %>
    </ul>
  </div>
</div>
<%= form_for @hobby do |form| %>
  <div id="hobby">
    <input class="typeahead form-control" name="name" type="text" placeholder="Insert Hobby">
  </div>
  <%= form.submit "Add hobby", class: "btn blue margin-top-10" %>
<% end %>