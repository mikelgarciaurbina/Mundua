<%= form_for @house do |form| %>
  <%= render 'partials/errors', object: @house %>

  <%= form.hidden_field :latitude, class: 'js-latitude' %>
  <%= form.hidden_field :longitude, class: 'js-longitude' %>
  
  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: 'form-control js-address-search', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :rooms %>
    <%= form.number_field :rooms, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: 'form-control' %>
  </div>

  <%= form.submit class: "btn blue margin-top-10" %>
<% end %>
